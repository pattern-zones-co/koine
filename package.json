{
	"name": "koine",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"description": "Koine - HTTP gateway and SDK for Claude Code CLI",
	"workspaces": ["packages/*", "packages/sdks/*"],
	"scripts": {
		"dev": "bun run --filter '@pattern-zones-co/*' dev",
		"build": "bun run --filter '@pattern-zones-co/*' build",
		"start": "bun run --filter @pattern-zones-co/koine start",
		"test": "bun run --filter '@pattern-zones-co/*' test:run",
		"test:watch": "bun run --filter '@pattern-zones-co/*' test",
		"test:coverage": "bun run --filter '@pattern-zones-co/*' test:coverage",
		"lint": "bun run --filter '@pattern-zones-co/*' lint",
		"lint:root": "biome check .",
		"format": "biome format --write .",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@commitlint/cli": "^19.6.1",
		"@commitlint/config-conventional": "^19.6.0",
		"husky": "^9.1.7"
	},
	"engines": {
		"node": ">=20",
		"bun": ">=1.1"
	}
}
