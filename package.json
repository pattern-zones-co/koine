{
	"name": "koine",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"description": "Koine - HTTP gateway and SDK for Claude Code CLI",
	"scripts": {
		"dev": "pnpm --filter @pattern-zones-co/koine dev",
		"build": "pnpm --filter @pattern-zones-co/koine build",
		"start": "pnpm --filter @pattern-zones-co/koine start",
		"test": "pnpm -r test:run",
		"test:watch": "pnpm -r test",
		"test:coverage": "pnpm -r test:coverage",
		"lint": "pnpm -r lint",
		"lint:root": "biome check .",
		"format": "biome format --write .",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@commitlint/cli": "^19.6.1",
		"@commitlint/config-conventional": "^19.6.0",
		"husky": "^9.1.7"
	},
	"engines": {
		"node": ">=20",
		"bun": ">=1.1"
	}
}
