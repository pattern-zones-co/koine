{
	"name": "koine",
	"version": "2.0.0",
	"private": true,
	"type": "module",
	"description": "Koine - HTTP gateway and SDK for Claude Code CLI",
	"workspaces": [
		"packages/*",
		"packages/sdks/*"
	],
	"scripts": {
		"dev": "bun run --filter '@patternzones/*' dev",
		"build": "bun run --filter '@patternzones/*' build",
		"start": "bun run --filter @patternzones/koine start",
		"test": "bun run --filter '@patternzones/*' test:run",
		"test:watch": "bun run --filter '@patternzones/*' test",
		"test:coverage": "bun run --filter '@patternzones/*' test:coverage",
		"lint": "bun run --filter '@patternzones/*' lint",
		"lint:root": "biome check .",
		"format": "biome format --write .",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@commitlint/cli": "19.6.1",
		"@commitlint/config-conventional": "19.6.0",
		"husky": "9.1.7"
	},
	"engines": {
		"node": "22.21.1",
		"bun": "1.3.3"
	}
}
