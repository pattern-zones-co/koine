{
	"name": "@patternzones/koine",
	"private": true,
	"version": "2.0.0",
	"description": "HTTP gateway service for Claude Code CLI",
	"repository": {
		"type": "git",
		"url": "https://github.com/pattern-zones-co/koine.git",
		"directory": "packages/gateway"
	},
	"homepage": "https://github.com/pattern-zones-co/koine",
	"bugs": "https://github.com/pattern-zones-co/koine/issues",
	"author": "Pattern Zones Co",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"dev": "bun --env-file=../../.env tsx watch src/index.ts",
		"build": "tsc",
		"start": "bun --env-file=../../.env run dist/index.js",
		"lint": "biome check .",
		"test": "vitest",
		"test:run": "vitest run",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "RUN_E2E_TESTS=true vitest run --config vitest.e2e.config.ts",
		"openapi:generate": "bun run scripts/generate-openapi.ts",
		"openapi:check": "bun run scripts/generate-openapi.ts && git diff --exit-code docs/openapi.yaml"
	},
	"dependencies": {
		"@scalar/express-api-reference": "^0.8.30",
		"express": "4.22.1",
		"uuid": "11.1.0",
		"zod": "3.25.76"
	},
	"devDependencies": {
		"@asteasolutions/zod-to-openapi": "7.3.4",
		"@patternzones/koine-sdk": "workspace:*",
		"@types/express": "5.0.6",
		"@types/node": "25.0.2",
		"@types/supertest": "6.0.3",
		"@types/uuid": "10.0.0",
		"@vitest/coverage-v8": "3.2.4",
		"supertest": "7.1.4",
		"tsx": "4.21.0",
		"typescript": "5.9.3",
		"vitest": "3.2.4",
		"yaml": "^2.8.2"
	},
	"engines": {
		"node": "22.21.1",
		"bun": "1.3.3"
	},
	"keywords": ["claude", "claude-code", "anthropic", "ai", "gateway", "api"],
	"license": "SEE LICENSE IN LICENSE",
	"files": ["dist", "README.md"]
}
